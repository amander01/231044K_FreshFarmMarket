@page
@model _231044K_FreshFarmMarket.Areas.Identity.Pages.Account.LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code login";
}

<h2 class="mb-3">Recovery code login</h2>

<p class="text-muted">
    Enter one of your recovery codes.
</p>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Input.RecoveryCode" class="form-label"></label>
        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="one-time-code" />
        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
    </div>

    <button class="btn btn-primary w-100" type="submit">Login</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

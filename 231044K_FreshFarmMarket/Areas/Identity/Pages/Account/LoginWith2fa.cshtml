@page
@model _231044K_FreshFarmMarket.Areas.Identity.Pages.Account.LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<h2 class="mb-3">Two-factor authentication</h2>

<p class="text-muted">
    Enter the 6-digit code from your authenticator app.
</p>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Input.TwoFactorCode" class="form-label"></label>
        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="one-time-code" />
        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Input.RememberMachine" class="form-check-input" />
        <label asp-for="Input.RememberMachine" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary w-100" type="submit">Verify</button>

    <div class="mt-3">
        <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">
            Use a recovery code
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model _231044K_FreshFarmMarket.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="mb-3">Login</h2>

<form id="account" method="post">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <div class="input-group">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" id="pw" />
            <button class="btn btn-outline-secondary" type="button" id="togglePw">👁</button>
        </div>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        <label class="form-check-label" asp-for="Input.RememberMe"></label>
    </div>

    <!-- ✅ reCAPTCHA token (bound to LoginModel.RecaptchaToken) -->
    <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />

    <button type="submit" class="btn btn-primary w-100">Login</button>

    <div class="mt-3">
        <a asp-page="./ForgotPassword">Forgot your password?</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- 👁 show/hide password -->
    <script>
        document.getElementById("togglePw")?.addEventListener("click", function () {
            const pw = document.getElementById("pw");
            if (!pw) return;
            pw.type = (pw.type === "password") ? "text" : "password";
        });
    </script>

    <!-- ✅ reCAPTCHA v3 -->
    <script src="https://www.google.com/recaptcha/api.js?render=@Model.SiteKey"></script>
    <script>
        (function () {
            const form = document.getElementById("account");
            const tokenInput = document.getElementById("recaptchaToken");
            if (!form || !tokenInput) return;

            form.addEventListener("submit", function (e) {
                // if token already present, allow submit
                if (tokenInput.value && tokenInput.value.length > 20) return;

                e.preventDefault();

                grecaptcha.ready(function () {
                    grecaptcha.execute("@Model.SiteKey", { action: "login" })
                        .then(function (token) {
                            tokenInput.value = token;
                            form.submit();
                        });
                });
            });
        })();
    </script>
}

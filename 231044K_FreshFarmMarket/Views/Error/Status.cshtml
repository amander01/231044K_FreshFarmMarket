@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var code = (int)(ViewData["StatusCode"] ?? 500);
    var title = code switch
    {
        404 => "Page Not Found",
        403 => "Access Denied",
        500 => "Server Error",
        _ => "Error"
    };

    var message = code switch
    {
        404 => "The page you’re looking for doesn’t exist (or was moved).",
        403 => "You don’t have permission to access this page.",
        500 => "Something went wrong on our side. Please try again.",
        _ => "An unexpected error occurred."
    };
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="fw-bold mb-2">@code - @title</h1>
                    <p class="text-muted mb-4">@message</p>

                    <div class="d-flex gap-2">
                        <a class="btn btn-primary" href="/">Go to Homepage</a>
                        <button class="btn btn-outline-secondary" onclick="history.back()">Go Back</button>
                    </div>

                    <hr class="my-4" />
                    <small class="text-muted">
                        If this keeps happening, please contact support and share this code: <b>@code</b>.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

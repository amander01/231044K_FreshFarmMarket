<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _231044K_FreshFarmMarket</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-lg">
                <a class="navbar-brand fw-semibold d-flex align-items-center gap-2"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/FreshFarmMarketLogo.jpg"
                         alt="Fresh Farm Market"
                         style="width:36px;height:36px;object-fit:cover;border-radius:10px;border:1px solid rgba(0,0,0,.08);" />
                    <span class="text-dark">FreshFarmMarket</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-1">
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded-3"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded-3"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container-lg py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top bg-white mt-auto">
        <div class="container-lg py-3 small text-muted d-flex flex-column flex-md-row justify-content-between gap-2">
            <div>
                &copy; 2026 <span class="fw-semibold text-dark">_231044K_FreshFarmMarket</span>
            </div>
            <div>
                <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <!-- ✅ jQuery MUST load before jquery.validate / unobtrusive (Identity uses these) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Page scripts (includes _ValidationScriptsPartial from your Identity pages) -->
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Active nav highlight (simple + reliable)
        (function () {
            const path = window.location.pathname.toLowerCase();
            document.querySelectorAll(".navbar .nav-link").forEach(a => {
                const href = (a.getAttribute("href") || "").toLowerCase();
                if (!href) return;

                const isActive =
                    path === href ||
                    (href !== "/" && path.startsWith(href));

                if (isActive) {
                    a.classList.add("active", "bg-light");
                    a.setAttribute("aria-current", "page");
                }
            });
        })();
    </script>
</body>
</html>
